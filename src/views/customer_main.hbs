

<head>
  <link rel="stylesheet" type="text/css" href="main.css" />
  <link
    href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
  <script>
    const logout = () => {window.location.href="http://localhost:3000/logout"};
    const move = () => {window.location.href="http://localhost:3000/sugang"};
  </script>
</head>
<body>
  <form method="post" action="/logout">
    <button type="submit">로그아웃</button>
  </form>
  <h1>CUSTOMER</h1>
  <div>
  <table>
    {{#each user}}
    <tr>
      <td>{{Ssn}}</td>
      <td>{{CEmail}}</td>
      <td>{{Cname}}</td>
      <td>{{City}}</td>
      <td>{{Street}}</td>
      <td>{{Detail_Address}}</td>
    </tr>
    {{/each}}
  </table>
  </div>
  <div>
  <h2>You can buy this things : </h2>
  <table>
    {{#each canbuycars}}
    <form method = "GET" action="/booking/{{Vin}}">
    <tr>
      <td>{{Model_Name}}</td>
      <td>{{Company}}</td>
      <td>{{Engine_Capacity}}cc</td>
      <td>{{Tonnage}}</td>
      <td>{{Color}}</td>
      <td>{{Year}}년</td>
      <td>{{SVin}}</td>
      <td>{{SSsn}}</td>
      <td>{{BookDate}}</td>
      <td>{{Vin}}</td>
      <td>{{Price}}만원</td>
      <td><input type="submit" value="예약하기"></td>
    </tr>
    </form>
    {{/each}}
  </table>
  </div>
  <div>
  <h2>너가 예약한 차 : </h2>
  <table>
    {{#each mybookedcars}}
    <form method = "POST" action="/booking/delete/{{SVin}}">
    <tr>
      <td>
        {{#if Saled}} TRUE
        {{else}} FALSE
        {{/if}}
      </td>
      <td>{{SVin}}</td>
      <td>{{BookDate}}</td>
      <td>{{Price}}만원</td>
      <td>{{Company}}</td>
      <td>{{Model_Name}}</td>
      <td>{{Engine_Capacity}}cc</td>
      <td>{{Tonnage}}</td>
      <td>{{Color}}</td>
      <td>{{Year}}</td>
      <td><input type="submit" value="취소하기"></td>
    </tr>
    </form>
    {{/each}}
  </table>
  </div>
</body>
